		  while(CH2_DC < 65535)
		          {
		              TIM2->CCR1 = CH2_DC;
		              CH2_DC += 70;
		              HAL_Delay(1);

		          }
		  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_11, GPIO_PIN_SET);
		          while(CH2_DC > 0)
		          {
		              TIM2->CCR1 = CH2_DC;
		              CH2_DC -= 70;
		              HAL_Delay(1);

		          }
		          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_11, GPIO_PIN_RESET);
	  }

  /* USER CODE END 1 */

